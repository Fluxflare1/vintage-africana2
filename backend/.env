POSTGRES_PASSWORD=PUT_YOUR_LOCAL_POSTGRES_PASSWORD_HERE
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# ===== CORS =====
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===== Timezone =====
DJANGO_TIME_ZONE=Africa/Lagos
